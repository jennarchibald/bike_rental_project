
<h3>Are you sure you wish to delete this customer?</h3>
<p>This action cannot be reversed!</p>

<table>
  <tr>
    <th>Name</th>
    <td><%= @customer.first_name %> <%= @customer.last_name %></td>
  </tr>
  <tr>
    <th>Contact</th>
    <td><%= @customer.contact_number %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @customer.age%></td>
  </tr>
</table>

<p>Deleting this customer will also delete all their lease records!!!</p>

<% if @customer.current_leases.length > 0 %>
<h3>Current Rentals</h3>
<% end %>

<table>
  <% for lease in @customer.current_leases %>
    <tr>
      <td><%= lease.start_date %></td>
      <td><%= lease.end_date %></td>
      <td><form action="/leases/<%=lease.id%>" method="get">
        <input type="submit" name="more-lease-details" value="More Details">
      </form></td>
    </tr>
  <% end %>
</table>

<% if @customer.past_leases.length >0 %>
<h3>Past Rentals</h3>
<% end %>

<table>
  <% for lease in @customer.past_leases %>
    <tr>
      <td><%= lease.start_date %></td>
      <td><%= lease.end_date %></td>
      <td><form action="/leases/<%=lease.id%>" method="get">
        <input type="submit" name="more-lease-details" value="More Details">
      </form></td>
    </tr>
  <% end %>
</table>

<form action="/customers/<%=@customer.id%>/delete" method="post">
  <input type="submit" name="delete" value="Delete Customer">
</form>
