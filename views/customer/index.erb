<h4><a href="/customers/new">Add a new customer</a></h4>

<table>
  <tr>
    <th>Name</th>
    <th>Contact Number</th>
    <th>Age</th>
  </tr>
  <% for customer in @customers %>
    <tr>
      <td><%= customer.name %></td>
      <td><%= customer.contact_number %></td>
      <td><%= customer.age %></td>
      <td><form action="/customers/<%=customer.id%>" method="get">
        <input type="submit" name="show" value="More Details">
      </form></td>
    </tr>

  <% end %>
</table>
