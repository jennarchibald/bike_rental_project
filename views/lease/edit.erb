<div class="sidebar">
  <h4><a href="/customers">Start new Lease</a></h4>
  <h4><a href="/leases">Back to Top</a></h4>
</div>

<form action="/leases/<%= @lease.id %>" method="post">
  <label for="customer">Customer Name</label>
  <select name="customer_id" id="customer">
    <% for customer in @customers %>
    <option value="<%= customer.id%>"
      <%= 'selected' if @lease.customer_id == customer.id%>>
      <%= customer.first_name%> <%= customer.last_name%>
    </option>
    <%end%>
  </select>
  <label for="stock-item">Item</label>
  <select name="stock_item_id" id = "stock-item">
    <% for item in @stock_items %>
    <option value="<%= item.id%>"
      <%= 'Selected' if @lease.stock_item_id == item.id%>>
      <%= item.type%> (<%=item.id%>)</option>
      <%end%>
    </select>
    <label for="duration">Duration (days)</label>
    <input type="number" name="duration" value="<%= @lease.duration%>" min="1">
    <input type="hidden" name="start_date" value="<%=@lease.start_date%>">
    <input type="hidden" name="returned" value="<%=@lease.returned%>">
    <input type="submit" name="edit_lease" value="Save Changes">
  </form>
