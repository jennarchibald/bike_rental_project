
<h3><%="This Lease is Overdue For Return" if @lease.overdue? %></h3>
<table>
  <tr>
    <th>Customer Name</th>
    <td><%= @lease.customer.first_name%> <%= @lease.customer.last_name%></td>
    <td>
      <form action="/customers/<%=@lease.customer_id%>" method="get">
        <input type="submit" name="more-customer-details" value="More Details">
      </form></td>
    </tr>
    <tr>
      <th>Item Leased</th>
      <td><%= @lease.stock_item.type%></td>
      <td>
        <form action="/stock/<%=@lease.stock_item_id%>" method="get">
          <input type="submit" name="more-stock-details" value="More Details">
        </form></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td colspan="2"><%= @lease.start_date%></td>
      </tr>
      <tr>
        <th>Lease Duration</th>
        <td><%= @lease.duration %> Days</td>
      </tr>
      <tr>
        <th>End Date</th>
        <td colspan="2"><%= @lease.end_date%></td>
      </tr>
      <tr>
        <th>Total Cost</th>
        <td><%= @lease.total_cost%></td>
      </tr>
      <tr>
        <td colspan="2">
          <% if @lease.returned == true %>
          <%= 'Item Returned' %>
          <% else %>
          <%= 'Item on Loan' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <form action="/leases/<%=@lease.id%>/edit" method="get">
            <input type="submit" name="edit-lease" value="Edit Lease Details">
          </form></td>
        </tr>
        <tr>
          <form action="/leases/<%= @lease.id%>" method="post">
            <input type="hidden" name="" value="">
          </form>
        </tr>

      </table>
