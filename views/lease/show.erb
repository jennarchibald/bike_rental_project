
<h3><%="This Lease is Overdue For Return" if @lease.overdue? %></h3>
<table>
  <tr>
    <th>Customer Name</th>
    <td><%= @lease.customer.name%></td>
    <td>
      <form action="/customers/<%=@lease.customer_id%>" method="get">
        <input type="submit" name="more-customer-details" value="More Details">
      </form></td>
    </tr>
    <tr>
      <th>Item Leased</th>
      <td><%= @lease.stock_item.type%></td>
      <td>
      <form action="/stock/<%=@lease.stock_item_id%>" method="get">
        <input type="submit" name="more-stock-details" value="More Details">
      </form></td>
    </tr>
    <tr>
      <th>Start Date</th>
      <td colspan="2"><%= @lease.start_date%></td>
    </tr>
    <tr>
      <th>Lease Duration</th>
      <td><%= @lease.duration %> Days</td>
    </tr>
    <tr>
      <th>End Date</th>
      <td colspan="2"><%= @lease.end_date%></td>
    </tr>
    <tr>
      <th>Total Cost</th>
      <td><%= @lease.total_cost%></td>
    </tr>

  </table>
