<h4><a href="/stock/new">Add an item to Stock</a></h4>


<form action="/stock/filter" method="post">
  <select name="type">
    <option value="bike">Bikes</option>
    <option value="helmet">Helmets</option>
    <option value="lock">Locks</option>
    <input type="submit" value="Filter Items">
  </select>
</form>
<table>
  <tr>
    <th>ID</th>
    <th>Type</th>
    <th>Rental Cost</th>
    <th>Available</th>
  </tr>
  <% for item in @stock_items %>
  <tr>
    <td><%= item.id%></td>
    <td><%= item.type.capitalize %></td>
    <td><%= item.rental_cost %></td>
    <td><%= item.available ? 'yes': 'no' %></td>
    <td><form action="/stock/<%=item.id%>" method="get">
      <input type="submit" name="stock-details" value="More Details">
    </form></td>
  </tr>

  <% end %>
</table>
